pipeline {
    agent any

    environment {
        DOCKER_USERNAME = credentials('docker-username')
        DOCKER_PASSWORD = credentials('docker-password')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Nehara831/AirLine-Ticket-Booking-System.git'
            }
        }
        stage('Build and Test') {
            steps {
                sh 'npm install'
                sh 'npm run build'
                sh 'npm test'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t tnehara831/airline-ticket-booking-frontend:latest .'
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-credentials') {
                        sh 'docker tag airline-ticket-booking-frontend:latest tnehara831/airline-ticket-booking-frontend:latest'
                        sh 'docker push tnehara831/airline-ticket-booking-frontend:latest'
                    }
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                sh '''
                ansible-playbook -i hosts deploy.yml --limit frontend
                '''
            }
        }

    }
}
